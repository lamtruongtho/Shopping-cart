    </servlet>
    <servlet>
        <servlet-name>SearchCakeController</servlet-name>
        <servlet-class>hautt.controllers.SearchCakeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginFacebookController</servlet-name>
        <servlet-class>hautt.controllers.LoginFacebookController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FowardUpdatePageController</servlet-name>
        <servlet-class>hautt.controllers.FowardUpdatePageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCakeController</servlet-name>
        <servlet-class>hautt.controllers.UpdateCakeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>hautt.controllers.AddToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFromCartController</servlet-name>
