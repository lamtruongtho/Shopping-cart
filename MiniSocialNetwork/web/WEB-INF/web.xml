<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>AuthenFilter</filter-name>
        <filter-class>hautt.filters.AuthenFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>hautt.listeners.ContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>hautt.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>hautt.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>hautt.controllers.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>hautt.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostArticleController</servlet-name>
        <servlet-class>hautt.controllers.PostArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchAllArticleController</servlet-name>
        <servlet-class>hautt.controllers.SearchAllArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchArticleController</servlet-name>
        <servlet-class>hautt.controllers.SearchArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewArticleDetailController</servlet-name>
        <servlet-class>hautt.controllers.ViewArticleDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteArticleController</servlet-name>
        <servlet-class>hautt.controllers.DeleteArticleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyAccountController</servlet-name>
        <servlet-class>hautt.controllers.VerifyAccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendVerifyEmailController</servlet-name>
        <servlet-class>hautt.controllers.SendVerifyEmailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeEmotionController</servlet-name>
        <servlet-class>hautt.controllers.MakeEmotionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/RegisterController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostArticleController</servlet-name>
        <url-pattern>/PostArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchAllArticleController</servlet-name>
        <url-pattern>/SearchAllArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchArticleController</servlet-name>
        <url-pattern>/SearchArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewArticleDetailController</servlet-name>
        <url-pattern>/ViewArticleDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteArticleController</servlet-name>
        <url-pattern>/DeleteArticleController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyAccountController</servlet-name>
        <url-pattern>/VerifyAccountController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendVerifyEmailController</servlet-name>
        <url-pattern>/SendVerifyEmailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeEmotionController</servlet-name>
        <url-pattern>/MakeEmotionController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>loginPage.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>DBConn</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <listener>
        <listener-class>hautt.listeners.ContextListener</listener-class>
    </listener>
    <context-param>
        <param-name>log4jProperties</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>
</web-app>
